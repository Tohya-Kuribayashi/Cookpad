<div class="recipe-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">レシピを作成</h1>
        <%= form_for @recipe do |f| %>
          <div class="form-group">
            <%= f.label :料理名 %>
            <%= f.text_area :title, class: 'form-control' %>
          </div>
          
          <div class="form-group">
            <%= f.label :画像 %>
            <%= f.file_field :image%>
          </div>
          
          <div class="form-group">
            <%= f.label :料理の説明 %>
            <%= f.text_area :description, class: 'form-control' %>
          </div>
          
　　　　　<% if logged_in? %>
            <%= f.submit '材料・作り方の入力に進む', class: 'btn btn-black btn-block' %>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
